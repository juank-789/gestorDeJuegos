<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="es.iesfranciscodelosrios.com.juancarlos.view.DesarrolladoraFormController"
            prefWidth="400.0" prefHeight="200.0">
    <children>
        <VBox alignment="CENTER" spacing="10.0" layoutX="50.0" layoutY="30.0" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20">
            <Label text="Nombre de la Desarrolladora"/>
            <TextField fx:id="nombreField" promptText="Nombre"/>
            <Label text="Pais de la Desarrolladora"/>
            <TextField fx:id="paisField" promptText="Pais"/>


            <HBox alignment="CENTER" spacing="10.0">
                <Button text="Guardar" onAction="#onGuardar"/>
                <Button text="Cancelar" onAction="#onCancelar"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
