<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.DatePicker?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="es.iesfranciscodelosrios.com.juancarlos.view.ComentarioFormController"
            prefWidth="400.0" prefHeight="250.0">
    <children>
        <VBox alignment="CENTER" spacing="10.0" layoutX="50.0" layoutY="20.0" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20">
            <Label text="Texto del Comentario"/>
            <TextField fx:id="textoField" promptText="Comentario"/>

            <Label text="Fecha"/>
            <DatePicker fx:id="fechaPicker"/>

            <Label text="Juego:" minWidth="100"/>
            <ComboBox fx:id="txtTitulo" prefWidth="200"/>


            <HBox alignment="CENTER" spacing="10.0">
                <Button text="Guardar" onAction="#onGuardar"/>
                <Button text="Cancelar" onAction="#onCancelar"/>
            </HBox>

        </VBox>
    </children>
</AnchorPane>
